{
  "name": "hise-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for querying HISE documentation, Scripting API, and code examples",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:configure": "node scripts/build-and-configure.js",
    "start": "node dist/index.js",
    "start:production": "node dist/index.js --production",
    "dev": "tsc && node dist/index.js",
    "dev:production": "tsc && node dist/index.js --production"
  },
  "keywords": [
    "mcp",
    "hise",
    "documentation",
    "scripting-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.9.3"
  }
}
